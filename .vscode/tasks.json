{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Remove directory for binaries",
            "command": "rm",
            "args": [
                "-rf",
                "${fileDirname}/bin"
            ]
        },
        {
            "type": "cppbuild",
            "label": "Create directory for binaries",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/bin"
            ]
        },
        {
            "type": "cppbuild",
            "label": "Build files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-lm",
                "-lncurses",
                "*.c",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build project",
            "dependsOn": [
                "Remove directory for binaries",
                "Create directory for binaries",
                "Build files"
            ]
        }
    ],
    "version": "2.0.0"
}